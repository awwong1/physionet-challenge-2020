{
  "exp_name": "PhysioNet2020/SimpleLSTM",
  "agent": "agents.physionet2020.ClassificationAgent",
  "dataset": {
    "name": "datasets.physionet2020.PhysioNet2020Dataset",
    "kwargs": {
      "data_dir": "Training_WFDB",
      "max_seq_len": 4000
    }
  },
  "val_split": 0.1,
  "use_collate_fn": true,
  "train_loader": {
      "batch_size": 128,
      "num_workers": 16,
      "shuffle": true,
      "pin_memory": true
  },
  "val_loader": {
      "batch_size": 64,
      "num_workers": 16,
      "shuffle": false,
      "pin_memory": true
  },
  "model": {
    "name": "models.simple_lstm.SimpleLSTM"
  },
  "criterion": {
    "name": "torch.nn.BCEWithLogitsLoss"
  },
  "optimizer": {
    "name": "apex.optimizers.FusedAdam",
    "kwargs": {
      "lr": 0.01
    }
  },
  "epochs": 30,
  "log_per_num_batch": 1,
  "use_amp": true,
  "gpu_ids": [0]
}

